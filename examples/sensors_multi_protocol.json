{
  "_comment": "Example Multi-Protocol Sensor Configuration",
  "_description": "This file demonstrates all implemented sensor types with real examples",
  "_protocols": "EZO (Atlas Scientific), Analog (4-20mA, 0-10V, Thermistor), I2C (BME280, SHT30/31, VL53L1X), GPIO, DigitalCounter",
  "sensors": [
    {
      "enabled": true,
      "name": "pH Probe",
      "sensor_type": "EZO",
      "protocol": "EZO_PH",
      "formula": "x",
      "units": "pH",
      "i2cAddress": 99,
      "modbusRegister": 5,
      "sample_interval": 5000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Temperature Probe",
      "sensor_type": "EZO", 
      "protocol": "EZO_RTD",
      "formula": "x",
      "units": "°C",
      "i2cAddress": 102,
      "modbusRegister": 6,
      "sample_interval": 3000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Pressure Transmitter",
      "sensor_type": "Analog",
      "protocol": "4-20mA",
      "formula": "(x-4)*25/16",
      "units": "psi",
      "pin_assignment": 26,
      "modbusRegister": 7,
      "sample_interval": 1000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Level Sensor",
      "sensor_type": "Analog",
      "protocol": "0-10V",
      "formula": "x*10",
      "units": "%",
      "pin_assignment": 27,
      "modbusRegister": 8,
      "sample_interval": 2000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Ambient Temperature",
      "sensor_type": "Analog",
      "protocol": "Thermistor",
      "formula": "x",
      "units": "°C",
      "pin_assignment": 28,
      "modbusRegister": 9,
      "sample_interval": 5000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Environment Sensor",
      "sensor_type": "I2C",
      "protocol": "BME280",
      "formula": "x",
      "units": "°C",
      "i2cAddress": 118,
      "modbusRegister": 10,
      "sample_interval": 10000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Humidity Sensor",
      "sensor_type": "I2C", 
      "protocol": "SHT30",
      "formula": "x",
      "units": "%RH",
      "i2cAddress": 68,
      "modbusRegister": 11,
      "sample_interval": 5000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Distance Sensor",
      "sensor_type": "I2C",
      "protocol": "VL53L1X",
      "formula": "x",
      "units": "mm",
      "i2cAddress": 41,
      "modbusRegister": 12,
      "sample_interval": 1000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Flow Meter",
      "sensor_type": "DigitalCounter",
      "protocol": "PulseCount",
      "formula": "x*0.1",
      "units": "L/min",
      "pin_assignment": 15,
      "modbusRegister": 13,
      "sample_interval": 1000,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    },
    {
      "enabled": true,
      "name": "Alarm Input",
      "sensor_type": "GPIO",
      "protocol": "Digital",
      "formula": "x",
      "units": "",
      "pin_assignment": 14,
      "modbusRegister": 14,
      "sample_interval": 500,
      "calibrationOffset": 0,
      "calibrationSlope": 1
    }
  ]
}